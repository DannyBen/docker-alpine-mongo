title   "Docker Utilities"
summary "Utilities for building the docker image"
version "0.0.1"

image_name = 'dannyben/alpine-mongo'

help   "Build the docker image"
action :build do
  run! "docker build -t #{image_name} ."
end

action :bash do
  run! "docker run -it --entrypoint /bin/bash #{image_name}"
end

action :mongo do
  run! "docker run -it -p 27017:27017 #{image_name}"
end

action :push do
  run! "docker push #{image_name}"
end

